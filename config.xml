<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cheon.centerPoint" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>centerPoint_Web</name>
    <description>
    너와 나의 연결 거리
  </description>
    <author email="coheonsb@gmail.com" href="http://cordova.io">
    너와 나의 연결 거리
  </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
    <splash src="res/screen/ios/logo.png" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="20" />
        <allow-intent href="market:*" />
        <icon src="res/screen/android/res.png" />
        <icon density="mdpi" src="res/screen/android/mdpi.png" />
        <icon density="hdpi" src="res/screen/android/hdpi.png" />
        <icon density="xhdpi" src="res/screen/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/screen/android/xxhdpi.png" />
        <splash density="port-hdpi" src="res/screen/android/logo.png" />
        <splash density="port-ldpi" src="res/screen/android/logo.png" />
        <splash density="port-mdpi" src="res/screen/android/logo.png" />
        <splash density="port-xhdpi" src="res/screen/android/logo.png" />
        <splash density="land-hdpi" src="res/screen/android/logo.png" />
        <splash density="land-ldpi" src="res/screen/android/logo.png" />
        <splash density="land-mdpi" src="res/screen/android/logo.png" />
        <splash density="land-xhdpi" src="res/screen/android/logo.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
        <icon height="40" src="res/screen/ios/icon-40.png" width="40" />
        <icon height="58" src="res/screen/ios/icon-58.png" width="58" />
        <icon height="180" src="res/screen/ios/Icon-180.png" width="180" />
        <icon height="60" src="res/screen/ios/Icon-60.png" width="60" />
        <icon height="120" src="res/screen/ios/Icon-120.png" width="120" />
        <icon height="76" src="res/screen/ios/Icon-76.png" width="76" />
        <icon height="152" src="res/screen/ios/Icon-152.png" width="152" />
        <icon height="80" src="res/screen/ios/Icon-80.png" width="80" />
        <icon height="57" src="res/screen/ios/Icon-57.png" width="57" />
        <icon height="114" src="res/screen/ios/Icon-114.png" width="114" />
        <icon height="72" src="res/screen/ios/Icon-72.png" width="72" />
        <icon height="144" src="res/screen/ios/Icon-144.png" width="144" />
        <icon height="29" src="res/screen/ios/Icon-29.png" width="29" />
        <icon height="50" src="res/screen/ios/Icon-50.png" width="50" />
        <icon height="100" src="res/screen/ios/Icon-100.png" width="100" />
        <icon height="87" src="res/screen/ios/Icon-87.png" width="87" />
        <icon height="167" src="res/screen/ios/Icon-167.png" width="167" />
        <icon height="1024" src="res/screen/ios/Icon-1024.png" width="1024" />
        <splash height="480" src="res/screen/ios/Default~iphone.png" width="320" />
        <splash height="960" src="res/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="res/screen/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="res/screen/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="1136" src="res/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="res/screen/ios/Default-667h.png" width="750" />
        <splash height="2208" src="res/screen/ios/Default-736h.png" width="1242" />
        <splash height="1242" src="res/screen/ios/Default-Landscape-736h.png" width="2208" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreenBackgroundColor" value="#8aacc8" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-battery-status" spec="^2.0.2" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-contacts" spec="^3.0.1" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-device-motion" spec="^2.0.1" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-vibration" spec="^3.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.4.0" />
    <engine name="android" spec="^7.0.0" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="ios" spec="^4.5.4" />
</widget>
